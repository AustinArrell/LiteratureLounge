@model Book
@{
    ViewData["Title"] = "Create Book";
}
<div style=" display:flex; justify-content:center;">
    <form method="post" style="width: 50%">
      <fieldset class="border p-3 mt-2">
        <h1 class="text-primary">Create Book</h1>
        <div>
          <label asp-for="Title"></label>
          <span asp-validation-for="Title" class="text-danger"></span>
          <input asp-for="Title" type="text" class="form-control">

          <label asp-for="Author"></label>
          <span asp-validation-for="Author" class="text-danger"></span>
          <textarea asp-for="Author" class="form-control" rows="1"></textarea>
          
          <label asp-for="ISBN"></label>
          <span asp-validation-for="ISBN" class="text-danger"></span>
          <textarea asp-for="ISBN" class="form-control" rows="1"></textarea>

          <label asp-for="Notes"></label>
          <span asp-validation-for="Notes" class="text-danger"></span>
          <textarea asp-for="Notes" class="form-control" rows="1"></textarea>

          <label asp-for="ChapterLength"></label>
          <span asp-validation-for="ChapterLength" class="text-danger"></span>
          <select asp-for="ChapterLength" class="form-select">
            <option>Medium</option>
            <option>Unknown/Other</option>
            <option>Short</option>
            <option>Long</option>
          </select>

          <label asp-for="ReadStatus"></label>
          <span asp-validation-for="ReadStatus" class="text-danger"></span>
          <select asp-for="ReadStatus" class="form-select">
              <option>Read</option>
              <option>Re-Read</option>
              <option>Unread</option>
          </select>

          <label asp-for="MediaType"></label>
          <span asp-validation-for="MediaType" class="text-danger"></span>
          <select asp-for="MediaType" class="form-select">
            <option>Paperback</option>
            <option>Hardcover</option>
            <option>Kindle</option>
          </select>

          <label asp-for="SignatureType"></label>
          <span asp-validation-for="SignatureType" class="text-danger"></span>
          <select asp-for="SignatureType" class="form-select">
            <option>None</option>
            <option>Sticker</option>
            <option>Original</option>
            <option>Signature Plate</option>
          </select>

          <label asp-for="CheckedOutTo">Checked Out To</label>
          <span asp-validation-for="CheckedOutTo" class="text-danger"></span>
          <input asp-for="CheckedOutTo" type="text" class="form-control">

          <label for="isAnnotated">Annotated?</label>
          <span asp-validation-for="isAnnotated" class="text-danger"></span>
          <input id="isAnnotated" asp-for="isAnnotated" class="form-check-input" type="checkbox" rows="1">
         
          <label for="isCheckedOut">Checked Out?</label>
          <span asp-validation-for="isCheckedOut" class="text-danger"></span>
          <input id="isCheckedOut" asp-for="isCheckedOut" class="form-check-input" type="checkbox" rows="1">
          
          <label for="isSigned">Signed?</label>
          <span asp-validation-for="isSigned" class="text-danger"></span>
          <input id="isSigned" asp-for="isSigned" class="form-check-input" type="checkbox" rows="1">
          
          <label for="isStamped">Embossed?</label>
          <span asp-validation-for="isStamped" class="text-danger"></span>
          <input id="isStamped" asp-for="isStamped" class="form-check-input" type="checkbox" rows="1">

          <label for="isFavorite">Favorite?</label>
          <span asp-validation-for="isFavorite" class="text-danger"></span>
          <input id="isFavorite" asp-for="isFavorite" class="form-check-input" type="checkbox" rows="1">
          

        </div>
        </fieldset>
        <fieldset >
        <button asp-controller="Book" asp-action="Create" type="submit" 
        class="btn btn-primary mt-2"><i class="bi bi-check2"></i> Create</button>
        <a class="btn btn-danger mt-2" asp-controller="Book" asp-action="Index">
            <i class="bi bi-x-circle"></i> Cancel</a>
      </fieldset>
    </form>
</div>
