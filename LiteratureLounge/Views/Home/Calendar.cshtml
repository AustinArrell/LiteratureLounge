@model HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}
@section Scripts
{
    <script type="text/javascript" src="~/js/index.global.js"></script>
    <script type="text/javascript" src="~/js/plotly.js"></script>
    <script>
            var books = @Html.Raw(Json.Serialize(Model.ReadDates));    
            console.log(books);

            document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
              initialView: 'dayGridMonth',
              height:'100%',
              events:books,
                  eventColor: '#eb6864'
            });
            calendar.render();
          });

      var date = calendar.getDate();
      var month_int = date.getMonth();
      console.log(month_int);
    </script>
}
<div class="text-center">
    <h1 class="display-4">Bugs Books</h1>
        
</div>
    
    <div style="Display:flex; justify-content:center;">
        <div id="readDataChart" style="height:100%;"></div>
        <div id="readPagesChart" style="height:100%;"></div>
    </div>
    <div style="height:70vh">
        <div id='calendar'></div>
    </div>
